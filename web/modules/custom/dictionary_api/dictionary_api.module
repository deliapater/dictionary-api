<?php
function dictionary_api_form($form, &$form_state) {
  $form['word'] = array(
    '#type' => 'textfield',
    '#title' => t('Enter a word'),
  );

  $form['submit'] = array(
    '#type' => 'submit',
    '#value' => t('Get Definition'),
    '#ajax' => array(
      'callback' => 'dictionary_api_ajax_callback',
      'wrapper' => 'dictionary-api-result',
      'method' => 'replace',
      'effect' => 'fade',
    ),
  );

  $form['result'] = array(
    '#type' => 'markup',
    '#prefix' => '<div id="dictionary-api-result">',
    '#suffix' => '</div>',
  );

  return $form;
}

function dictionary_api_form_submit($form, &$form_state) {
  $word = $form_state['values']['word'];
  $url = "https://api.dictionaryapi.dev/api/v2/entries/en_US/$word";
  $response = \Drupal::httpClient()->get($url);
  $data = json_decode($response->getBody(), TRUE);
  $definitions = [];

  foreach ($data[0]['meanings'] as $meaning) {
    foreach ($meaning['definitions'] as $definition) {
      $definitions[] = $definition['definition'];
    }
  }

  $form_state['response'] = $definitions;
}

function dictionary_api_ajax_callback($form, &$form_state) {
  return $form['result'];
}